{
  "extends": [
    "next/core-web-vitals",
    "plugin:jsx-a11y/recommended"
  ],
  "plugins": [
    "jsx-a11y"
  ],
  "rules": {
    "jsx-a11y/alt-text": [
      "error",
      {
        "elements": ["img", "object", "area", "input[type='image']"],
        "img": ["Image"],
        "area": true,
        "input[type='image']": true,
        "object": true
      }
    ]
  }
}
